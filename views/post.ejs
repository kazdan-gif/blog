<%- include('header') %>
    <article class="post">
      <div class="post-header">
        <div class="post-meta">
          <% if (category) { %><span class="badge badge-category"><%= category %></span><% } %>
          <time><%= date %></time>
          <span class="reading-time"><%= readingTime %> דק׳ קריאה</span>
        </div>
        <h1><%= title %></h1>
        <% if (impact) { %><div class="impact-banner"><%= impact %></div><% } %>
        <% if (tools && tools.length) { %>
        <div class="tools">
          <% tools.forEach(function(t) { %><span class="tool-badge"><%= t %></span><% }) %>
        </div>
        <% } %>
      </div>
      <div class="post-content">
        <%- content %>
      </div>
    </article>
<%- include('footer') %>
