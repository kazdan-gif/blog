<%- include('header') %>

    <% if (page === 'home') { %>
    <section class="hero">
      <h1>AI לעסקים קטנים ובינוניים</h1>
      <p class="hero-sub">פתרונות אוטומציה לעסקים. בעיות אמיתיות, כלים אמיתיים, תוצאות אמיתיות.</p>
    </section>
    <% } else { %>
    <section class="hero">
      <h1>מאמרים</h1>
      <p class="hero-sub">צלילות טכניות לפרויקטים של אוטומציה שנבנו עבור עסקים קטנים ובינוניים.</p>
    </section>
    <% } %>

    <% const featured = posts.filter(p => p.featured); %>
    <% const regular = posts.filter(p => !p.featured); %>

    <% if (featured.length > 0 && page === 'home') { %>
    <section class="featured-section">
      <h2 class="section-title">פרויקט מומלץ</h2>
      <% featured.forEach(function(p) { %>
        <a href="/post/<%= p.slug %>" class="featured-card<%= p.image ? ' has-image' : '' %>">
          <% if (p.image) { %>
          <div class="featured-card-image">
            <img src="<%= p.image %>" alt="<%= p.title %>" loading="lazy">
          </div>
          <% } %>
          <div class="featured-card-inner">
            <div class="card-meta">
              <% if (p.category) { %><span class="badge badge-category"><%= p.category %></span><% } %>
            </div>
            <h3><%= p.title %></h3>
            <p class="card-excerpt"><%= p.excerpt %></p>
            <div class="card-bottom">
              <% if (p.impact) { %><span class="impact"><%= p.impact %></span><% } %>
              <% if (p.tools && p.tools.length) { %>
              <div class="tools">
                <% p.tools.forEach(function(t) { %><span class="tool-badge"><%= t %></span><% }) %>
              </div>
              <% } %>
            </div>
          </div>
        </a>
      <% }) %>
    </section>
    <% } %>

    <section class="posts-grid">
      <% if (page === 'home' && featured.length > 0) { %><h2 class="section-title">כל המאמרים</h2><% } %>
      <div class="grid">
        <% const list = (page === 'home' && featured.length > 0) ? regular : posts; %>
        <% list.forEach(function(p) { %>
          <a href="/post/<%= p.slug %>" class="card<%= p.image ? ' has-image' : '' %>">
            <% if (p.image) { %>
            <div class="card-image">
              <img src="<%= p.image %>" alt="<%= p.title %>" loading="lazy">
            </div>
            <% } %>
            <div class="card-body">
              <div class="card-meta">
                <% if (p.category) { %><span class="badge badge-category"><%= p.category %></span><% } %>
              </div>
              <h3><%= p.title %></h3>
              <time datetime="<%= p.rawDate %>"><%= p.date %></time>
              <p class="card-excerpt"><%= p.excerpt %></p>
              <div class="card-bottom">
                <% if (p.impact) { %><span class="impact"><%= p.impact %></span><% } %>
                <% if (p.tools && p.tools.length) { %>
                <div class="tools">
                  <% p.tools.forEach(function(t) { %><span class="tool-badge"><%= t %></span><% }) %>
                </div>
                <% } %>
              </div>
            </div>
          </a>
        <% }) %>
      </div>
    </section>

    <section class="tags-section">
      <h2 class="section-title">נושאים</h2>
      <div class="tags-search">
        <input type="text" id="tag-search" placeholder="חיפוש נושא..." autocomplete="off">
      </div>
      <div class="tags-list" id="tags-list">
        <% tags.forEach(function(tag) { %>
          <button class="tag-btn" data-tag="<%= tag %>"><%= tag %></button>
        <% }) %>
      </div>
    </section>

<%- include('footer') %>
