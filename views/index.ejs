<%- include('header') %>

    <% if (page === 'home') { %>
    <section class="hero">
      <h1>AI לעסקים קטנים ובינוניים</h1>
      <p class="hero-sub">פתרונות אוטומציה לעסקים. בעיות אמיתיות, כלים אמיתיים, תוצאות אמיתיות.</p>
    </section>
    <% } else { %>
    <section class="hero">
      <h1>מקרי בוחן</h1>
      <p class="hero-sub">צלילות טכניות לפרויקטים של אוטומציה שנבנו עבור מריטל ועסקים נוספים.</p>
    </section>
    <% } %>

    <% const featured = posts.filter(p => p.featured); %>
    <% const regular = posts.filter(p => !p.featured); %>

    <% if (featured.length > 0 && page === 'home') { %>
    <section class="featured-section">
      <h2 class="section-title">פרויקט מומלץ</h2>
      <% featured.forEach(function(p) { %>
        <a href="/post/<%= p.slug %>" class="featured-card">
          <div class="featured-card-inner">
            <div class="card-meta">
              <% if (p.project) { %><span class="badge badge-project"><%= p.project %></span><% } %>
              <% if (p.category) { %><span class="badge badge-category"><%= p.category %></span><% } %>
            </div>
            <h3><%= p.title %></h3>
            <p class="card-excerpt"><%= p.excerpt %></p>
            <div class="card-bottom">
              <% if (p.impact) { %><span class="impact"><%= p.impact %></span><% } %>
              <% if (p.tools && p.tools.length) { %>
              <div class="tools">
                <% p.tools.forEach(function(t) { %><span class="tool-badge"><%= t %></span><% }) %>
              </div>
              <% } %>
            </div>
          </div>
        </a>
      <% }) %>
    </section>
    <% } %>

    <section class="posts-grid">
      <% if (page === 'home' && featured.length > 0) { %><h2 class="section-title">כל הפוסטים</h2><% } %>
      <div class="grid">
        <% const list = (page === 'home' && featured.length > 0) ? regular : posts; %>
        <% list.forEach(function(p) { %>
          <a href="/post/<%= p.slug %>" class="card">
            <div class="card-meta">
              <% if (p.project) { %><span class="badge badge-project"><%= p.project %></span><% } %>
              <% if (p.category) { %><span class="badge badge-category"><%= p.category %></span><% } %>
            </div>
            <h3><%= p.title %></h3>
            <time><%= p.date %></time>
            <p class="card-excerpt"><%= p.excerpt %></p>
            <div class="card-bottom">
              <% if (p.impact) { %><span class="impact"><%= p.impact %></span><% } %>
              <% if (p.tools && p.tools.length) { %>
              <div class="tools">
                <% p.tools.forEach(function(t) { %><span class="tool-badge"><%= t %></span><% }) %>
              </div>
              <% } %>
            </div>
          </a>
        <% }) %>
      </div>
    </section>

<%- include('footer') %>
